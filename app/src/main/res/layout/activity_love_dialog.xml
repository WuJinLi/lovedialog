<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_dialog_content"
        android:layout_width="285dp"
        android:layout_height="380dp"
        android:background="@drawable/deb_bg_love_dialog">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:scaleType="fitXY"
            android:src="@mipmap/deb_ic_dialog_top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="94dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="82dp"
                android:layout_height="74dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/deb_ic_dialog_huihang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是第 52948 位陪伴人"
                android:textColor="#ffffffff"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="我于2020年06月04日参与“用心陪伴您的每一度”扶贫公益计划，由国家电网有限公司网上国网平台守护。"
                android:textColor="#ffffffff"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="19.5dp"
                android:layout_marginBottom="19.5dp"
                android:background="#29ffffff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="感谢语：\n如果此刻你身边有人陪你，帮我抱抱她，因为我想抱的人，已经抱不到了。 "
                android:textColor="#ffffff"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/rl_dialog_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/deb_ic_dialog_close" />
</RelativeLayout>
