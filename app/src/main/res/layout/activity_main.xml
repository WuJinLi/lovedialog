<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:clickable="false"
    >


    <Button
        android:visibility="visible"
        android:id="@+id/btn_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="活动view"

        />
    <Button
        android:layout_marginTop="50dp"
        android:visibility="visible"
        android:id="@+id/btn_show_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="活动dialog"

        />
    <Button
        android:layout_marginTop="100dp"
        android:visibility="visible"
        android:id="@+id/btn_show_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="活动activity"

        />

    <RelativeLayout
        android:clickable="false"
        android:id="@+id/rl_dialog"
        android:visibility="gone"
        android:background="#A6000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="118dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/rl_dialog_content"
            android:layout_width="285dp"
            android:background="@drawable/deb_bg_love_dialog"
            android:layout_height="380dp">
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                android:src="@mipmap/deb_ic_dialog_top"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="94dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="82dp"
                    android:layout_height="74dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/deb_ic_dialog_huihang"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我是第 52948 位陪伴人"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我于2020年06月04日参与“用心陪伴您的每一度”扶贫公益计划，由国家电网有限公司网上国网平台守护。"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="19.5dp"
                    android:layout_marginBottom="19.5dp"
                    android:background="#29ffffff"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="感谢语：\n如果此刻你身边有人陪你，帮我抱抱她，因为我想抱的人，已经抱不到了。 "
                    android:textColor="#ffffff"/>

            </LinearLayout>
            
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_cloes"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/deb_ic_dialog_close"
            android:layout_below="@+id/rl_dialog_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            />
    </RelativeLayout>


</FrameLayout>